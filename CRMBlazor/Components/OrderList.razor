@page "/"
@inject StagesCRUD db
@inject NavigationManager Navigation
<h3>Список заказов</h3>
@if (orderList==null)
{
    <p>Загрузка</p>
}
else
{
    <div class="d-flex justify-content-center table-responsive min-vh-100 text-center">
    <table class="table table-striped align-middle table-bordered">
        <thead class="table-primary align-middle">
            <tr>
            <th>Дата</th>
            <th>Реклама</th>
            <th>Имя</th>
            <th>Номер</th>
            <th>Вид работ</th>
            <th>Площадь</th>
            <th>Цена за метр</th>
            <th>Цена полная</th>
            <th>Стадия</th>
            <th>Статус</th>
            <th>Описание</th>
            <th>Действия</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in orderList)
    {<tr>
        <td>
            @item.RegistredDate.ToString("d")
        </td>
        <td>
            @item.Advertise.Name
        </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.JobType.Name
                </td>
                <td>
                    @item.Area
                </td>
                <td>
                    @item.PricePerMeter
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Stage.Name
                </td>
                <td>
                    @if(item.Status=true)
                    {
                        <text>в работе</text>
                    }
                    else
                    {
                        <text>отказ</text>
                    }
                </td
                <td>
                    @item.Description
                </td>
                <td>
                    <button>Добавить задачу</button>
                    <button @onclick="(()=>editOrder(item.Id))">Изменить</button>
                </td>

    </tr>
        
    }
    </tbody>
    </table>
    </div>
}

@code {
    List<Order>? orderList;



    protected override async Task OnInitializedAsync()
    {
        orderList = await db.GetOrders();


    }
    void editOrder(int id)
    {
        Navigation.NavigateTo($"/add/{id}");
    }

}
